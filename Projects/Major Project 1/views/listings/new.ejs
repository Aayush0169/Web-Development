<% layout("/layouts/boilerplate") %>
<body>
    <h4>Create a new listing: </h4>
    <div class="row">
    <div class="col-8 offset-2">
    <form action="/listings" 
    method="post" 
    class="needs-validation" 
    enctype="multipart/form-data"
    novalidate>
        <div class="mb-3">
            <label for="title">Enter Title</label>
            <input class="form-control"
             type="text"
              name="listing[title]" required>
              <div class="invalid-feedback">Title is required</div>
            </div>
            
            
            <div class="mb-3">
                <label for="description">Enter Description:</label>
                <textarea name="listing[description]"
                id="description" 
                class="form-control" required>
            </textarea>
            <div class="invalid-feedback mb-3">Description is required</div>
        </div>

        <div class="mb-3">
            <label for="image">Upload Image:</label>
            <input class="form-control"
            type="file"
            name="listing[image]" >
            
        </div>
        
        <div class="mb-3">
            <label for="price">Enter Price</label>
            <input class="form-control"
            type="text" 
            name="listing[price]" required>
            <div class="invalid-feedback">Price is required</div>
            
        </div>
        <div class="row">
            
            <div class="mb-3 col-md-4" required>
                <label for="location">Enter location </label>
                <input class="form-control" type="text" name="listing[location]" required>
                <div class="invalid-feedback">Location is required</div>
                
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country">Enter country</label>
                <input class="form-control" type="text" name="listing[country]" required>
                <div class="invalid-feedback">Enter the name of country</div>
    
            </div>
        </div>
        <button class="add-btn btn btn-dark">Submit</button>
    </form>
     </div>
    </div>
</body>
