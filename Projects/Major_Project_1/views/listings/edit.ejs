<% layout("/layouts/boilerplate") %>
<body>
    <h3>Edit Your Listing: </h3>
    <div class="row">
      <div class="col-8 offset-2">
    <form method="post"
     action="/listings/<%= listing._id %>?_method=PUT"
      novalidate 
      enctype="multipart/form-data"
      class="needs-validation" >
        <div class="mb-3">
          <label for="title">Title:</label>
        <input type="text"
         class="form-control"
         name="listing[title]" 
         value="<%= listing.title %>" required>
         <div class="invalid-feedback">Title is required</div>
        </div>
        
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea  required 
          name="listing[description]" 
          value="<%= listing.description %>"
          class="form-control"
          id="description" 
          rows="6" cols="15"><%= listing.description %></textarea>
          <div class="invalid-feedback">Description is required</div>
        </div>
        <div class="mb-3">
          <i>Original Image</i><br>
          <img src="<%= originalImg %>" alt="listing img">
        </div>
        <div class="mb-3"> 
          <label for="image" class="form-label">Upload new image:</label>
          <input
          class="form-control"
          type="file"
          name="listing[image]" >
        </div>
        
        <div class="mb-3">
          <label for="price">Price:</label>
          <input  value="<%= listing.price %>"
          type="number"
          value="<%= listing.price %>"
          class="form-control"
          name="listing[price]" >
        </div>
        
        <div class="row">
            
          <div class="mb-3 col-md-4" required>
              <label for="location">Enter location </label>
              <input class="form-control" 
              type="text" 
              name="listing[location]"
              value="<%= listing.location %>"
               >
              <div class="invalid-feedback">Location is required</div>
              
          </div>
          
          <div class="mb-3 col-md-8">
              <label for="country">Enter country</label>
              <input class="form-control" type="text" name="listing[country]"
              value="<%= listing.country %>" 
              required>
              <div class="invalid-feedback">Enter the name of country</div>
  
          </div>
      </div>
        <button class="btn btn-dark add-btn">Update</button>
    </form>
    </div>
    </div>
</body>