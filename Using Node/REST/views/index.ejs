<%- include("includes/head.ejs") %>
<body>
    <h1>Sasta Blogs</h1>
        <% for(post of posts) {%>
            <div id="post">
            <h3 id="user">@ <%= post.user %></h3>
            <h4 id="h4">says: <p id="content"><%= post.content %></p></h4>
            <a href="http://localhost:3000/posts/<%= post.id %>">See  Details</a>
            <a href="http://localhost:3000/posts/<%= post.id%>/edit">edit</a>
           <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
            <button>Delete</button>
           </form>
        </div>
            <% } %>
           <br>
            <a id="new" href="http://localhost:3000/posts/new">Create a Post!</a>
</body>